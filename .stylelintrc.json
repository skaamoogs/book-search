{
  "extends": ["stylelint-config-standard-scss"],
  "rules": {
    "alpha-value-notation": "number",
    "selector-class-pattern": [
      "^([a-z][A-Za-z0-9]*){1}(_[a-z][A-Za-z0-9]*)*(__[a-z][A-Za-z0-9]*){0,1}(_[a-z][A-Za-z0-9]*)*$",
      {
        "message": "Expected class name to be match BEM with camelCase names"
      }
    ]
  }
}
